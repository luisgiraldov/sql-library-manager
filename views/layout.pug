<!DOCTYPE html>
html
  head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Bree+Serif|Open+Sans:400,700')
    link(rel='stylesheet', href='/static/stylesheets/style.css')
  body
    div.main-container
      header
        h1= title
        form(method="get", action=`/books/search/`, id="search-form")
          if title!="Books"
            input(name="search", type="search", id="search-input")
          else
            if(inputValue)
              input(name="search", type="search", id="search-input", class="search-input", value=`${inputValue}`)
            else
              input(name="search", type="search", id="search-input", class="search-input")
          button(type='submit', class="button") Search
      div.container
        block content
    
    script(src='/static/js/main.js')

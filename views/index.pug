extends layout.pug
block content 
    p
        a.button(href="/books/new") Create New Book
        a.button(href="/", class="index-home-btn") Home
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody
            each book in books
                tr
                    td
                        a(href=`/books/${book.id}`) !{book.title}
                    td !{book.author}
                    td !{book.genre}
                    td= book.year

                    